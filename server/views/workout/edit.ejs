<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>

      <form class="form" method="POST">
        <div class="form-group">
          <label for="nameTextField">Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="Enter your name"
            name="Name"
            value="<%= workout.Name %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="authorTextField">Weight</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="Enter your weight"
            name="Author"
            value="<%= workout.Weight %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="publishedTextField">Exercise</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="Enter your exercise"
            name="Published"
            value="<%= workout.Exercise %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="descriptionTextArea">Reps</label>
          <textarea
            type="text"
            class="form-control"
            id="descriptionTextArea"
            placeholder="Enter your reps"
            name="Description"
            required
          >
                    <%= workout.Reps %>
                    </textarea
          >
        </div>

        <div class="form-group">
          <label for="priceTextField">Calories Burned</label>
          <input
            type="text"
            class="form-control"
            id="priceTextField"
            placeholder="Enter the amount of calories burned"
            name="Price"
            value="<%= workout.Calories_Burned %>"
            required
          />
        </div>

        <div class="form-group">
          <label for="priceTextField">Rest</label>
          <input
            type="text"
            class="form-control"
            id="priceTextField"
            placeholder="Enter the amount of rest time"
            name="Price"
            value="<%= workout.Rest %>"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i> Submit
        </button>

        <a href="/workout" class="btn btn-warning">
          <i class="fas fa-undo"></i> Cancel</a
        >
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
