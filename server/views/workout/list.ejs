<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><% title %> </h1>  
            <% if(typeof displayName == 'string' && displayName) { %>
            <a href="/workout/add" class="btn btn-primary" 
            role="button"><i class="fas fa-plus-circle"></i> Add workout</a>      
            <% } %>
            <br>
        <table class="table table-bordered table-striped table-hover">
            <tr class="d-flex">
                <th class="text-center col-2">Name</th>
                <th class="text-center col-2">Weight</th>
                <th class="text-center col-1">Exercise</th>
                <th class="text-center col-4">Reps</th>
                <th class="text-center col-1">Calories Burned</th>
                <th class="text-center col-1">Rest Time</th>
                <% if(typeof displayName == 'string' && displayName) { %>
                <th class="text-center col-2"></th>
                <% } %>
            </tr>
            <% for(let count=0;count<workoutlist.length;count++) { %>    
            <tr class="d-flex">
                <td class="text-center col-2"><%= workoutlist[count].Name %></td>
                <td class="text-center col-2"><%= workoutlist[count].Weight %></td>
                <td class="text-center col-1"><%= workoutlist[count].Exercise %></td>
                <td class="text-center col-4"><%= workoutlist[count].Reps %></td>
                <td class="text-center col-1"><%= workoutlist[count].Calories_Burned %></td>
                <td class="text-center col-1"><%= workoutlist[count].Rest %></td>
                <% if(typeof displayName == 'string' && displayName) { %>
                <td class="text-center col-1">
                    <a href="/workout/edit/<%= workoutlist[count]._id %>" 
                        class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                </td>
                <td class="text-center col-1">
                    <a href="/workout/delete/<%= workoutlist[count]._id %>" 
                        class="btn btn-danger btn-sm">
                        <i class="fas trash-alt"></i> Delete
                    </a>
                </td>
                <% } %>
            </tr>
            <% } %>
        </table>
    </div>
    </div>
</main>
<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>